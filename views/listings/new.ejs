<% layout("/layouts/boilerplate")%>
<body>
    <div class="row">
    <div class="col-8 offset-2">
         <br><br>
    <h3> Create New Listing</h3>
    <form method="post" action="/listings" novalidate class=" needs-validation">
       <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Add catche Title" type="text" class="form-control" required>
        <div class="valid-feedback">Title liiks Good</div>
        </div> 
        <div class="mb-3">
        <label for="title" class="form-label" >Description</label> 
        <textarea name="listing[description]"
        placeholder="enter description"
        class="form-control" required></textarea>
        <div class="invalid-feedback">please Enter the short Description</div>
        </div>
        <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input name="listing[image]" placeholder="enter image link/url" type="text" class="form-control">
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="1500"  class="form-control" required>
        <div class="invalid-feedback">please Enter the Price </div>
       </div>
       <div class="mb-3 col-md-8">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="Kolhapur,Rajastan" type="text" class="form-control" required>
        <div class="invalid-feedback">please Enter the valid Location</div>
       </div>
        </div>
        <div class="mb-3">
        <label for="country" class="form-label">Country</label> 
        <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
        <div class="invalid-feedback">please Enter the valid country</div>
        </div>
        <br><br>
        <button class="btn add-btn ">Add</button>
         <br><br>
    </form>
    </div>
    </div>
</body>
